<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingRight="5dp" >

    <net.oschina.app.widget.AvatarView
        android:id="@+id/fragment_team_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp" />

    <LinearLayout
        style="@style/wrap_wrap"
        android:layout_toRightOf="@+id/fragment_team_head"
        android:orientation="vertical"
        android:paddingTop="3dp" >

        <TextView
            android:id="@+id/fragment_team_name"
            style="@style/team_user_infor" />

        <TextView
            android:id="@+id/fragment_team_username"
            style="@style/team_user_infor"
            android:visibility="gone" />

        <TextView
            android:id="@+id/fragment_team_email"
            style="@style/team_user_infor" />

        <TextView
            android:id="@+id/fragment_team_tel"
            style="@style/team_user_infor" />

        <TextView
            android:id="@+id/fragment_team_address"
            style="@style/team_user_infor" />
    </LinearLayout>

